#!/usr/bin/env sh

{
    . "$(dirname $0)/../common"

    jq_check() {
        if which jq > /dev/null; then
            return 0
        fi
        return 1
    }

    jq_deps() {
        echo ""
    }

    jq_exec() {
        jqpath=$(jq_path)
        $jqpath $@
    }

    jq_install() {
        pkgmgr="$(dirname $0)/../pkgmgr"
        $pkgmgr install jq
        return $?
    }

    jq_path() {
        if which jq > /dev/null; then
            which jq
            return
        fi
    }

    command=$1
    shift
    case $command in
        check | deps | exec | install | path)
            jq_$command $@
            ;;
    esac
}
